                                                    <script>
                                                        var elemLoanTypeMap = new Map([
                                                            ['textMin', 'min_amount'],
                                                            ['textMax', 'max_amount'],
                                                            ['textDuration', 'duration'],
                                                            ['textInterest', 'interest']
                                                        ]);
                                                        var elemList = [
                                                            "textMin",
                                                            "textMax",
                                                            "textDuration",
                                                            "textInterest"
                                                        ];
                                                        var loanTypesJs = "<%= loanTypesStr %>";
                                                        loanTypesJs = loanTypesJs.replace(/&#34;/g, "\"")
                                                        //console.log(loanTypesJs);
                                                    </script>
                                                    <select id="selectLoan" class="selectpicker" data-live-search="true" data-width="100%" title="Select a loan" value="Select a loan" onChange="updateElements(this.value, elemList, loanTypesJs, elemLoanTypeMap)">
                                                        <% loanTypes.forEach(function(loanType) { %>
                                                            <option value="<%= loanType.loan_type_id%>"><%= loanType.name %></option><br>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Min. Amount ($)</label>
                                                <div class="col-12 col-sm-8 col-lg-6">
                                                <input id="textMin" type="text" disabled="disabled" class="form-control">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Max. Amount ($)</label>
                                                <div class="col-12 col-sm-8 col-lg-6">
                                                    <input id="textMax" type="text" disabled="disabled" class="form-control">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Payment Duration (Months)</label>
                                                <div class="col-12 col-sm-8 col-lg-6">
                                                    <input id="textDuration" type="text" disabled="disabled" class="form-control">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-12 col-sm-3 col-form-label text-sm-right">Monthly Interest (%)</label>
                                                <div class="col-12 col-sm-8 col-lg-6">
