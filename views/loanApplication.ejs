                                                <div class="col-12 col-sm-8 col-lg-6">
                                                    <input id="textLoanAmount" type="text" required="" data-parsley-type="number" class="form-control" onclick="addValidation('textLoanAmount')" onchange="checkAmount('textLoanAmount', 'submitLoan')">
